<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style>
    body {
        background-color: black;
        color: white;
        font-family: 'Montserrat', sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
        background-image: url('/images/world_map.png'), url('/images/pattern.png');
        background-size: contain, cover; 
        background-position: center, top left;
        background-repeat: no-repeat, repeat;
    }


    .darker {
        position: fixed;
        top: -94%;
        left: -10%;
        width: 150%;
        height: 150%;
        background: rgba(143, 27, 9, 0.5);
        -webkit-transform: rotate(30deg);
        transform: rotate(30deg);
    }

    .darker_blue {
        position: fixed;
        top: 27.65%;
        left: -54%;
        width: 150%;
        height: 150%;
        background: rgba(4, 45, 71, 0.5);
        -webkit-transform: rotate(30deg);
        transform: rotate(30deg);
    }

    .news_send {
        width: 500px;
        height: 100px;
        border-radius: 10px;
        padding: 15px;
        font-size: 16px;
        resize: none;
        background: rgba(255, 255, 255, 0.2);
        transition: background 0.3s ease;
    }

    .news_send:focus {
        background: rgba(255, 255, 255, 0.5);
        outline: none;
    }

    .all_news{
        z-index: 5000;
        position: absolute;
        top:50%
    }

    .btn {
        align-items: center;
        justify-content: center;
        color: rgb(255, 255, 255);
        border: none;
        border-radius: 50px;
        font-size: 16px;
        cursor: pointer;
    }

    .btn i {
        font-size: 18px;
    }

    #resultDisplay {
        display: none;
        margin-top: 20px;
        background: rgba(255, 255, 255, 0.2);
        padding: 15px;
        border-radius: 10px;
        text-align: center;
        font-size: 20px;
        font-weight: bold;
        width: 300px;
        color: white;
        box-shadow: 0px 0px 15px rgba(255, 255, 255, 0.5);
    }

    #loading-indicator {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        z-index: 6000;
    }

    #loading-indicator .spinner {
        border: 4px solid rgba(255, 255, 255, 0.3);
        border-top: 4px solid white;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        animation: spin 1s linear infinite;
        margin: 0 auto;
    }

    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .REAL_TAG{
        position: absolute; 
        top: 42%; 
        left: 8%; 
        font-size: 150px; 
        font-style: italic; 
        color: white;
        font-weight: bold;
    }

    .FAKE_TAG{
        position: absolute; 
        top: 42%; 
        right: 8%; 
        font-size: 150px; 
        font-style: italic; 
        color: white;
        font-weight: bold;
    }

    .news-ticker-container {
        position: fixed;
        bottom: 20px;
        width: 100%;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.1);
        color: white;
        font-size: 20px;
        font-weight: bold;
        padding: 10px 0;
        white-space: nowrap;
        z-index: 9999;
    }

    .news-ticker-wrapper {
        display: flex;
        overflow: hidden;
        width: 100%;
    }

    .news-ticker {
        display: flex;
        white-space: nowrap;
        animation: tickerMove 20s linear infinite;
    }

    @keyframes tickerMove {
        from {
            transform: translateX(100%);
        }
        to {
            transform: translateX(-100%);
        }
    }

    .breaking-news-container {
        position: fixed;
        bottom: 60px;
        width: 100%;
        background: rgb(138, 6, 6);
        color: white;
        font-size: 22px;
        font-weight: bold;
        padding: 10px 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        z-index: 10000;
        box-shadow: 0px 0px 10px rgba(138, 6, 6, 0.8);
    }

    .breaking-news-header {
        background: yellow;
        color: black;
        font-size: 20px;
        font-weight: bold;
        padding: 5px 15px;
        border-radius: 5px;
        animation: flash 1s infinite alternate;
    }

    .breaking-news-content {
        flex-grow: 1;
        padding-left: 20px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    #overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 7000;
        display: none;
    }

    @keyframes flash {
        0% { opacity: 1; }
        100% { opacity: 0.5; }
    }

    .glow-red {
        background-color: rgb(255, 0, 0,0.7);
        transition: background-color 0.3s ease;
    }

    .dull_tag{
        color: black;
    }

    .glow-blue {
        background-color: rgba(0, 0, 255, 0.5);
        transition: background-color 0.3s ease;
    }

    .dull-red {
        background-color: rgb(19, 19, 20, 0.5);
        transition: background-color 0.3s ease;
    }

    .dull-blue {
        background-color: rgba(19, 19, 20, 0.5);
        transition: background-color 0.3s ease;
    }

</style>

<body>

    <div id="overlay"></div>

    <div class="all_news">
        <textarea id="news_send" class="news_send" placeholder="Enter your news content" name="news_content"></textarea>
        <button id="send_button" class="btn btn_abs">
            <i class="fas fa-paper-plane"></i>
        </button>
    </div>

    <div class="darker_blue" id="darker_blue"></div>
    <div class="darker" id="darker"></div>

    <!-- Add the REAL and FAKE text in large italic font -->
    <div class="REAL_TAG" id="REAL_TAG">REAL</div>
    <div class="FAKE_TAG" id="FAKE_TAG">FAKE</div>

    <div id="loading-indicator">
        <div class="spinner"></div>
        <p>Loading...</p>
    </div>

    <div class="breaking-news-container">
        <div class="breaking-news-header">
            üî¥ BREAKING NEWS
        </div>
        <div class="breaking-news-content" id="breakingNewsContent">
            üö® Major Update: AI technology revolutionizes journalism!
        </div>
    </div>


    <div class="news-ticker-container">
        <div class="news-ticker-wrapper">
            <div class="news-ticker" id="newsTicker">
                üî¥ Breaking News: AI predicts the future of journalism! &nbsp;|&nbsp;
                üì∞ New technology changes the world! &nbsp;|&nbsp;
                üåé Global events unfolding now! &nbsp;|&nbsp;
                üöÄ SpaceX launches a new rocket! &nbsp;|&nbsp;
                üí∞ Stock market hits record highs! &nbsp;|&nbsp;
                üèÜ FAKE NEWS: Celebrity scandal turns out to be false! &nbsp;|&nbsp;
                ‚úÖ REAL NEWS: Scientists discover a new planet! &nbsp;|&nbsp;
                ‚ö†Ô∏è FAKE NEWS: Viral video exposed as hoax! &nbsp;|&nbsp;
                ‚úÖ REAL NEWS: Medical breakthrough in cancer research!
            </div>
        </div>
    </div>

    <script>
        const textarea = document.getElementById('news_send');
        textarea.addEventListener('input', () => {
            textarea.style.height = 'auto';
            textarea.style.maxHeight = '200px';
            textarea.style.height = `${textarea.scrollHeight}px`;
        });

        function triggerFakeGlow() {
            const body = document.getElementById('darker');
            const bodY = document.getElementById('darker_blue');
            const TAG = document.getElementById('REAL_TAG');
            body.classList.add('glow-red');
            bodY.classList.add('dull-blue');
            TAG.classList.add('dull_tag');

            setTimeout(() => {
                body.classList.remove('glow-red');
                bodY.classList.remove('dull-blue');
                TAG.classList.remove('dull_tag');
            }, 4000); 
        }

        function triggerRealGlow() {
            const body = document.getElementById('darker_blue');
            const bodY = document.getElementById('darker');
            const TAG = document.getElementById('FAKE_TAG');
            body.classList.add('glow-blue');
            bodY.classList.add('dull-red');
            TAG.classList.add('dull_tag');

            setTimeout(() => {
                body.classList.remove('glow-blue');
                bodY.classList.remove('dull-red');
                TAG.classList.remove('dull_tag');
            }, 4000); 
        }

        document.getElementById('send_button').addEventListener('click', async () => {
            const newsContent = document.getElementById('news_send').value;

            showLoadingIndicator();

            try {
                const response = await fetch('/get_news', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ news_content: newsContent }),
                });

                if (response.ok) {
                    const result = await response.json();
                    hideLoadingIndicator();

                    document.getElementById('news_send').value = '';
                    document.getElementById('news_send').style.height = '80px';

                    const prediction = result.prediction;

                    if (prediction === 0) {
                        triggerFakeGlow();
                    } else if (prediction === 1) {
                        triggerRealGlow();
                    }
                } else {
                    alert('Failed to classify news. Please try again.');
                    hideLoadingIndicator();
                    document.getElementById('news_send').value = '';
                    document.getElementById('news_send').style.height = '80px';
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
                hideLoadingIndicator();
                document.getElementById('news_send').value = '';
                document.getElementById('news_send').style.height = '80px';
            }
        });

        function showLoadingIndicator() {
            document.getElementById('loading-indicator').style.display = 'block';
            showOverlay();
            document.body.style.overflow = 'hidden';
        }

        function hideLoadingIndicator() {
            document.getElementById('loading-indicator').style.display = 'none';
            hideOverlay();
            document.body.style.overflow = 'auto';
        }

        function showOverlay() {
            document.getElementById('overlay').style.display = 'block';
        }

        function hideOverlay() {
            document.getElementById('overlay').style.display = 'none';
        }

        const style = document.createElement("style");
        style.innerHTML = `
            @keyframes glow {
                0% { box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.5); }
                100% { box-shadow: 0px 0px 25px rgba(255, 255, 255, 1); }
            }
        `;
        document.head.appendChild(style);
  
        const breakingNewsHeadlines = [
            "üö® Major Update: AI technology revolutionizes journalism!",
            "‚ö° Urgent: Stock market hits an all-time high!",
            "üåé Global Alert: Climate change effects worsening rapidly!",
            "üèÜ Sports News: Underdog team wins championship!",
            "üõ∞Ô∏è Space News: NASA confirms a new habitable planet!"
        ];

        let breakingIndex = 0;

        function updateBreakingNews() {
            document.getElementById("breakingNewsContent").textContent = breakingNewsHeadlines[breakingIndex];
            breakingIndex = (breakingIndex + 1) % breakingNewsHeadlines.length;
        }

        setInterval(updateBreakingNews, 5000); // Update every 5 seconds

    </script>


</body>


